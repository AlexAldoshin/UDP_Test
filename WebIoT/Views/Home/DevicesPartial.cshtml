@using Microsoft.AspNet.Identity
@model IEnumerable<WebIoT.Models.UserDevice>


@if (Request.IsAuthenticated)
{
    <h2>Устройства</h2>
    <p><button type="button" class="btn btn-success" id="NewDevice" onclick="NewDevice()">Новое устройство</button></p>
    <table class="table table-bordered table-sm table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>№</th>
                <th>Имя</th>
                <th>Описание</th>
                <th>Управление</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdDev</td>
                    <td>@item.DeviceName</td>
                    <td>@item.DeviceDescription</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group" aria-label="BtnGR">
                            <button type="button" class="btn btn-success">Экспорт</button>
                            <button type="button" class="btn btn-primary">Импорт</button>
                            <button type="button" class="btn btn-warning">Выбрать</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}